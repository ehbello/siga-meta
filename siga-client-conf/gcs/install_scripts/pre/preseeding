echo "Preseeding debconf keys..."
debconf-set-selections << EOF
# Password for database login account:
ldap-auth-config        ldap-auth-config/bindpw password
# LDAP root account password:
ldap-auth-config        ldap-auth-config/rootbindpw     password
# Unprivileged database user:
ldap-auth-config        ldap-auth-config/binddn string  cn=proxyuser,dc=example,dc=net
# Choices: Unix authentication, Mount volumes for user, LDAP Authentication, ConsoleKit Session Management
libpam-runtime  libpam-runtime/profiles multiselect     unix, libpam-mount, ldap, consolekit
# ¿Desea correr el riesgo de matar las sesiones SSH activas?
openssh-server  ssh/use_old_init_script boolean true
# Make local root Database admin:
ldap-auth-config        ldap-auth-config/dbrootlogin    boolean false
# Se regenerarán las claves vulnerables del sistema
openssh-server  ssh/vulnerable_host_keys        note
# LDAP account for root:
ldap-auth-config        ldap-auth-config/rootbinddn     string  cn=manager,dc=example,dc=net
# Local crypt to use when changing passwords:
# Choices: clear, crypt, nds, ad, exop, md5
ldap-auth-config        ldap-auth-config/pam_password   select  md5
# Nueva clave de sistema obligatoria
openssh-server  ssh/encrypted_host_key_but_no_keygen    note
# Reconfigure LDAP with debconf?
ldap-auth-config        ldap-auth-config/move-to-debconf        boolean true
# LDAP server Uniform Resource Identifier:
ldap-auth-config        ldap-auth-config/ldapns/ldap-server     string  ldap://server/
# Distinguished name of the search base:
ldap-auth-config        ldap-auth-config/ldapns/base-dn string  dc=siga,dc=es
# Should debconf manage LDAP configuration?
ldap-auth-config        ldap-auth-config/override       boolean true
# LDAP version to use:
# Choices: 3, 2
ldap-auth-config        ldap-auth-config/ldapns/ldap_version    select  3
# Does the LDAP database require login?
ldap-auth-config        ldap-auth-config/dblogin        boolean false
# ¿Desea deshabilitar la autenticación basada en desafío-respuesta?
openssh-server  ssh/disable_cr_auth     boolean false
EOF
